<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ttm.airbus.dal.mapper.PermissionMapper">
    <resultMap id="permissionMap" type="Permission">
        <id column="pkId" property="pkId"/>
        <result column="code" property="code"/>
        <result column="description" property="desc"/>

        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
        <result column="status" property="status"/>
    </resultMap>

    <sql id="base_column">
        pkId,code,description,createTime,updateTime,status
    </sql>

    <sql id="pageQuery">
        <where>
            1=1
            <if test="status!=null">
                AND status=#{status}
            </if>
        </where>
    </sql>

    <insert id="insert" parameterType="Permission" keyProperty="pkId" useGeneratedKeys="true">
        INSERT INTO t_permission(code,description,status,createTime,updateTime)
        VALUES(#{code},#{description},#{status},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="Permission">
        UPDATE t_permission
        <set>
            <if test="status!=null and status!=''">status=#{status},</if>
            updateTime=#{updateTime}
        </set>
        <where>
            pkId=#{pkId}
        </where>
    </update>

    <delete id="delete" parameterType="Long">
        UPDATE t_permission SET  status=1 WHERE pkId=#{pkId}
    </delete>

    <select id="select" parameterType="Map" resultMap="permissionMap">
        SELECT
        <include refid="base_column"/>
        <include refid="pageQuery"/>
        FROM t_permission limit #{offset},#{pageSize}
    </select>

    <select id="count" parameterType="Map" resultType="java.lang.Long">
        SELECT count(pkId) FROM t_permission
        <include refid="pageQuery"/>
    </select>

    <select id="findByRoleId" parameterType="java.lang.Long" resultMap="permissionMap">
        SELECT a.pkId,a.code,a.description,a.createTime,a.updateTime,a.status FROM
        t_permission a INNER JOIN t_role_permission b on a.pkId=b.permission_id
        WHERE b.role_id=#{roleId}
    </select>

    <select id="findByUserId" parameterType="java.lang.Long" resultMap="permissionMap">
        SELECT a.pkId,a.code,a.description,a.createTime,a.updateTime,a.status FROM
        t_permission a INNER JOIN t_user_permission b on a.pkId=b.permission_id
        WHERE b.user_id=#{userId}
    </select>

    <select id="selectById"  parameterType="java.lang.Long" resultMap="permissionMap">
        SELECT
        <include refid="base_column"/>
        FROM t_permission WHERE pkId=#{pkId}
    </select>

</mapper>